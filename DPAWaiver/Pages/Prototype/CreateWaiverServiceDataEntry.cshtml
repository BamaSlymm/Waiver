@page 
@model CreateWaiverServiceDataEntryModel 
@{ ViewData["Title"] = "Create Waiver - Service - Data Entry"; }

<div class="panel panel-primary marginTop20px">
    <div class="panel-heading">
        <h3 class="panel-title text-center">User Information</h3>
    </div>
    <div class="panel-body">
        <div class="row">
             <div class="col-md-3 col-xs-3">
                First Name: Test
            </div>
            <div class="col-md-3 col-xs-3">
                Last Name: User
            </div>
            <div class="col-md-5 col-xs-5">
                Email Address: test.user@state.co.us
            </div>

        </div>
        <div class="row">
            <div class="col-md-4 col-xs-4">
                Department: Education
            </div>
            <div class="col-md-3 col-xs-3">
                Division: Teacher
            </div>
            <div class="col-md-5 col-xs-5">
                Phone: 555-330-3303
            </div>
        </div>
    </div>
</div>

<div class="panel panel-primary marginTop20px">
    <div class="panel-heading">
        <h3 class="panel-title text-center">Waiver Information</h3>
    </div>
    <div class="panel-body">
        <div class="row" style="margin-bottom: 14px">
            <div class="col-md-4 col-xs-4">
                Purpose: Service
            </div>
            <div class="col-md-4 col-xs-4">
                Type: Data Entry
            </div>
            <div class="col-md-4 col-xs-4">
                Status: Started
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-xs-12">
                <div class="form-group required">
                    <label for="projectName" class="control-label fontWeightNormal">Project Name:</label>
                    <input type="text" class="form-control" id="projectName" required="true" placeholder="Your Project Name">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-xs-12">
                <div class="form-group required">
                    <label for="submittedDate" class="control-label fontWeightNormal">Submitted Date:</label>
                    <input type="date" class="form-control" id="submittedDate" required="true" value="05/04/2018">
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="form-group required">
                    <label for="costEstimate" class="control-label fontWeightNormal">Cost Estimate:</label>
                    <span class="glyphicon glyphicon-info-sign" data-toggle="tooltip" title="Enter the project cost and estimate such as 9999.99"></span>
                    <input type="number" class="form-control" id="costEstimate" required="true" value="5000.03">
                </div>
            </div>

        </div>

    </div>
</div>

<div class="panel panel-primary marginTop20px">
    <div class="panel-heading">
        <h3 class="panel-title text-center">Waiver Details</h3>
    </div>
    <div class="panel-body">
        <div class="form-group required">
            <label for="WorkflowDescription" class="control-label fontWeightNormal">Describe the current workflow process:</label>
            <textarea class="form-control" id="WorkflowDescription" rows='2'></textarea>
        </div>
        <div class="row">
            <div class="col-md-6 col-xs-12">
                <div class="form-group required">
                    <label for="estimatedNumberOfFTE" class="control-label fontWeightNormal">Total estimated number of FTE:
                        <i class="glyphicon glyphicon-info-sign" data-toggle="tooltip" title="Enter the estimated number of full time employees needed to complete this project. 
This is a numeric field. Decimal can be used (i.e. 1.5 which would be equal to 1 1/2 employees)"></i>
                    </label>

                    <input type="number" class="form-control" id="estimatedNumberOfFTE" aria-describedby="estimatedNumberOfFTE" placeholder="Full Time Employee Count">
                </div>
            </div>
            <div class="col-md-6 col-xs-12">

                <div class="form-group required">
                    <label for="estimatedNumberOfHours" class="control-label fontWeightNormal">Total estimated number of hours:
                        <span class="glyphicon glyphicon-question-sign" data-toggle="tooltip"
                            title="Enter the estimated number of hours needed to complete this project. 
This is a numeric field. Decimal can be used (i.e. 1.5 which would be equal to 1 1/2 hours)"></span>
                    </label>
                    <input type="number" class="form-control" id="estimatedNumberOfHours" aria-describedby="estimatedNumberOfHours" placeholder="Estimated number of hours">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-xs-12">
                <div class="form-group required">
                    <label for="estimatedNumberOfDocuments" class="control-label fontWeightNormal">Estimated number of documents:
                        <span class="glyphicon glyphicon-info-sign" data-toggle="tooltip" title="Enter the estimated number of documents needed to complete this project. 
This is a numeric field."></span>
                    </label>
                    <input type="number" class="form-control" id="estimatedNumberOfDocuments" aria-describedby="estimatedNumberOfDocuments" placeholder="Estimated number of documents">
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="form-group required">
                    <label for="EstimatedNumberOfFields" class="control-label fontWeightNormal">Estimated number of fields per document:
                        <span class="glyphicon glyphicon-info-sign" data-toggle="tooltip"
                            title="Enter the estimated number of fields per documents needed to complete this project. 
This is a numeric field."></span>
                    </label>
                    <input type="number" class="form-control" id="EstimatedNumberOfFields" aria-describedby="EstimatedNumberOfFields" placeholder="Estimated number of fields per document">
                </div>
            </div>
        </div>

        <div class="form-group required">
            <label for="systemRequirementsDescription" class="control-label fontWeightNormal">Specify system requirements:</label>
            <textarea class="form-control" id="systemRequirementsDescription" rows='2'></textarea>
        </div>


        <div class="form-group required">
            <label for="keyedIntoSystem" class="control-label fontWeightNormal">Can the data be keyed into an internal data system and be imported into the department's internal database?</label>
            <select class="form-control control-label" id="keyedIntoSystem">
                <option>Please select one</option>
                <option value='0'>No</option>
                <option value='1'>Yes</option>
            </select>
        </div>
        <div class='form-group required' id='reasonForNotKeyedIntoSystemDiv'>
            <label for='ReasonForNotKeyedIntoSystem' class='control-label fontWeightNormal'>Please explain why</label>
            <input type='text' class='form-control' id='ReasonForNotKeyedIntoSystem' aria-describedby='ReasonForNotKeyedIntoSystem' placeholder='Please explain why'>
        </div>

        <div class="form-group required">
            <label for="reasonDataEntryCenter" class="control-label fontWeightNormal">Customer believes that the data entry cannot be performed by the State's data entry center because:</label>
            <textarea class="form-control" id="reasonDataEntryCenter" rows='2'></textarea>
        </div>

        <div class="form-group">
            <label for="AdditionalComments" class="control-label fontWeightNormal">Any additional comments:</label>
            <textarea class="form-control" id="AdditionalComments" rows='2'></textarea>
        </div>

    </div>
</div>


<div class="row add-gutter marginTop20px pull-right">
    <partial name='_Logout' />
    <a class="btn btn-default" onclick="print();">Print&nbsp;
        <span class="glyphicon glyphicon-print" aria-hidden="true"></span>
    </a>
    <button class="btn btn-default btn-space-2x" type="reset">Clear Form&nbsp;
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
        </button>
    <button type="submit" class="btn btn-primary" id='createwaiver' value='Submit'>
            Create Waiver&nbsp;
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    </button>
</div>

<div style="clear: both"></div>

@section Scripts {
<script type="text/javascript">
    $(document).ready(function () {
        showIfSelected('#keyedIntoSystem', ['#reasonForNotKeyedIntoSystemDiv'], { valueList: ['0']});
    });

    $("#keyedIntoSystem").on("change", function () {
        showIfSelected('#keyedIntoSystem', ['#reasonForNotKeyedIntoSystemDiv'], { valueList: ['0']});
    });
</script>
}