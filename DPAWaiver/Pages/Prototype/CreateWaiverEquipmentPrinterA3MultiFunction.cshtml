@page 
@model CreateWaiverEquipmentPrinterA3MultiFunctionModel 
@{ ViewData["Title"] = "Create Waiver - Equipment - Print / Copy - A3 Multi Function Printer";}

<div class="panel panel-primary marginTop20px">
    <div class="panel-heading">
        <h3 class="panel-title text-center">User Information</h3>
    </div>
    <div class="panel-body">
        <div class="row">
             <div class="col-md-3 col-xs-3">
                First Name: Test
            </div>
            <div class="col-md-3 col-xs-3">
                Last Name: User
            </div>
            <div class="col-md-5 col-xs-5">
                Email Address: test.user@state.co.us
            </div>

        </div>
        <div class="row">
            <div class="col-md-4 col-xs-4">
                Department: Education
            </div>
            <div class="col-md-3 col-xs-3">
                Division: Teacher
            </div>
            <div class="col-md-5 col-xs-5">
                Phone: 555-330-3303
            </div>
        </div>
    </div>
</div>

<div class="panel panel-primary marginTop20px">
    <div class="panel-heading">
        <h3 class="panel-title text-center">Waiver Information</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6 col-xs-12">
                Purpose: Equipment
            </div>
            <div class="col-md-6 col-xs-12">
                Type: Print / Copy
            </div>
        </div>
        <div class="row" style="margin-bottom: 20px">
            <div class="col-md-6 col-xs-12">
                Subtype: A3 Multi Function Printer
            </div>
            <div class="col-md-6 col-xs-12">
                Status: Started
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 col-xs-12">
                <div class="form-group required">
                    <label for="projectName" class="control-label fontWeightNormal">Project Name:</label>
                    <input type="text" class="form-control" id="projectName" required="true" placeholder="Your Project Name">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-xs-12">
                <div class="form-group required">
                    <label for="submittedDate" class="control-label fontWeightNormal">Submitted Date:</label>
                    <input type="date" class="form-control" id="submittedDate" required="true" value="05/04/2018">
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="form-group required">
                    <label for="costEstimate" class="control-label fontWeightNormal">Project Budget/Cost Estimate:</label>
                    <span class="glyphicon glyphicon-info-sign" data-toggle="tooltip" title="Enter the project cost and estimate such as 9999.99"></span>
                    <input type="number" class="form-control" id="costEstimate" required="true" value="5000.03">
                </div>
            </div>
        </div>

    </div>
</div>

<form method="POST">
    <div class="panel panel-primary marginTop20px">
        <div class="panel-heading">
            <h3 class="panel-title text-center">Waiver Details</h3>
        </div>
        <div class="panel-body">

            <div class='row'>
                <div class='col-sm-6 col-xs-12'>
                    <div class='form-group required'>
                        <label for='printerType' class='control-label fontWeightNormal'>Type of equipment being requested:</label>
                        <select class='form-control' id='printerType' aria-describedby='printerType' asp-items="@Model.SelectList">
                        </select>
                    </div>
                </div>
                <div class='col-sm-6 col-xs-12'>
                    <div class="form-group required">
                        <label for="newOrReplace" class="control-label fontWeightNormal">Is this new addition or replacement?</label>
                        <select class="form-control" id="newOrReplace">
                            <option>Additional</option>
                            <option>New</option>
                            <option>Replacement</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class='row' id='otherPrinterTypeDiv'>
                <div class='col-sm-6 col-xs-12'>
                    <div class='form-group required'>
                        <label for='make' class='control-label fontWeightNormal'>Make</label>
                        <input type='text' class='form-control' id='make' aria-describedby='make' placeholder='Make'>
                    </div>
                </div>
                <div class='col-sm-6 col-xs-12'>
                    <div class='form-group required'>
                        <label for='model' class='control-label fontWeightNormal'>Model</label>
                        <input type='text' class='form-control' id='model' aria-describedby='model' placeholder='Model'>
                    </div>
                </div>
            </div>
            <!-- end of row -->


            <div class="form-group required">
                <label for="servicesReceived" class="control-label fontWeightNormal">How do you currently receive this services?</label>
                <textarea class="form-control" id="servicesReceived" rows="2" placeholder="if replacement please describe present equipment including Make, Model and Acquisition Date."></textarea>
            </div>

          

            <div class="form-group required">
                <label for="selectionReason" class="control-label fontWeightNormal">Reasons for selecting this particular equipment:</label>
                <textarea class="form-control" id="selectionReason" aria-describedby="selectionReason" placeholder="Reasons for selection"
                    rows='2'></textarea>
            </div>

            <div class="row">
                <div class="col-md-6 col-xs-12">
                    <div class="form-group required">
                        <label for="acquisitionType" class="control-label fontWeightNormal">How do you plan to acquire this equipment?</label>
                        <select class="form-control" id="acquisitionType">
                            <option value="1">Solicitation</option>
                            <option value="2">State Price Agreement</option>
                            <option value="3">Lease</option>
                            <option value="4">Discretionary Purchase</option>
                            <option>Cancelable Rental</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6 col-xs-12" id="solicitationSubDiv">
                    <div class="form-group required">
                        <label for="solicitationSubType" class="control-label fontWeightNormal">Solicitation SubType?</label>
                        <select class="form-control" id="solicitationSubType">
                            <option>Discretionary</option>
                            <option>DQ</option>
                            <option>IFB</option>
                            <option>RFP</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6 col-xs-12" id="statepriceSubDiv">
                    <div class="form-group required">
                        <label for="statepriceSubType" class="control-label fontWeightNormal">State Price SubType?</label>
                        <select class="form-control" id="statepriceSubType">
                            <option>Cancelable Rental</option>
                            <option>Lease</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6 col-xs-12" id="purchaseAmountDiv">
                    <div class='form-group required'>
                        <label for='purchaseAmount' class='control-label fontWeightNormal'>Purchase Amount</label>
                        <input type='number' class='form-control' id='purchaseAmount' aria-describedby='purchaseAmount' placeholder='Purchase Amount'>
                    </div>
                </div>
                <div class="col-md-6 col-xs-12" id="leaseDurationDiv">
                    <div class='form-group required'>
                        <label for='leaseDuration' class='control-label fontWeightNormal'>Lease Duration</label>
                        <select class='form-control' id='leaseDuration' aria-describedby='leaseDuration'>
                            <option value='48'>48 months</option>
                            <option value='60'>60 months</option>
                            <option value='0'>Other</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class='row' id='leaseTermsDiv'>
                <div class='col-sm-6 col-xs-12'>
                    <div class='form-group required'>
                        <label for='numberOfMonths' class='control-label fontWeightNormal'>Number of Months of Lease</label>
                        <input type='number' class='form-control' id='numberOfMonths' aria-describedby='numberOfMonths' placeholder='Number of Months of Lease'>
                    </div>
                </div>
                <div class='col-sm-6 col-xs-12'>
                    <div class='form-group required'>
                        <label for='monthlyLeaseAmount' class='control-label fontWeightNormal'>Monthly Lease Amount</label>
                        <input type='number' class='form-control' id='monthlyLeaseAmount' aria-describedby='monthlyLeaseAmount' placeholder='Monthly Lease Amount'>
                    </div>
                </div>
            </div>
            <!-- end of row -->

              <div class='row'>
                <div class='col-sm-6 col-xs-12'>
                    <div class='form-group required'>
                        <label for='blackCostPerPage' class='control-label fontWeightNormal'>Monochrome/black cost per click associated with the lease?</label>
                        <input type='number' class='form-control' id='blackCostPerPage' aria-describedby='blackCostPerPage' placeholder='Monochrome (black) cost per click associated with the Lease?'>
                    </div>
                </div> <!-- TODO: per click or per page ? what does per click mean -->
                <div class='col-sm-6 col-xs-12'>
                    <div class='form-group required'>
                        <label for='colorCostPerPage' class='control-label fontWeightNormal'>What is the Color cost per click associated with the Lease</label>
                        <input type='number' class='form-control' id='colorCostPerPage' aria-describedby='colorCostPerPage' placeholder='Color cost per click associated with the Lease'>
                    </div>
                </div>
            </div> <!-- TODO: is this only lease specific or for everything if so, when should it be required -->
            <!-- end of row -->

            <div class='row'>
                <div class='col-sm-6 col-xs-12'>
                    <div class='form-group required'>
                        <label for='blackMonthlyVolume' class='control-label fontWeightNormal'>Anticipated monochrome/black monthly volume:</label>
                        <input type='number' class='form-control' id='blackMonthlyVolume' aria-describedby='blackMonthlyVolume' placeholder='Anticipated Average Monochrome/black monthly volume:'>
                    </div>                
                </div>
                <div class='col-sm-6 col-xs-12'>
                    <div class='form-group required'>
                        <label for='colorMonthlyVolume' class='control-label fontWeightNormal'>Anticipated average color monthly volume</label>
                        <input type='number' class='form-control' id='colorMonthlyVolume' aria-describedby='colorMonthlyVolume' placeholder='Anticipated average color volume'>
                    </div>                
                </div>
            </div>
            <!-- end of row -->


            <hr class='sectionHeaderHR' />
            <div class='form-group required'>
                <label for='leaseAccessories' class='control-label fontWeightNormal'>List what accessories were added as part of your lease/rental agreement.</label>
                <textarea class='form-control' id='leaseAccessories' aria-describedby='leaseAccessories' placeholder='List what accessories were added as part of your lease/rental agreement.' rows='2'></textarea>
            </div>
            <div class='form-group required'>
                <label for='justificationDescription' class='control-label fontWeightNormal'>Justification For Request</label>
                <textarea class='form-control' id='justificationDescription' aria-describedby='justificationDescription' placeholder='Justification For Request'
                    rows='2'></textarea>
            </div>
            <div class="form-group required">
                <label for="alternativesDescription" class="control-label fontWeightNormal">Please describe the alternatives you have examined before making the request</label>
                <textarea class="form-control" id="overheadDescription" rows="2" placeholder="Please describe the alternatives you have examined before making the request"></textarea>
            </div>

            <div class='form-group required'>
                <label for='complianceDescription' class='control-label fontWeightNormal'>Please describe how OIT/DPA recommendations to consolidate printing assets are followed</label>
                <textarea class='form-control' id='complianceDescription' aria-describedby='complianceDescription' placeholder='Please describe what printing practices are being made to comply with the DPA/OIT Recommendations to consolidate printing assets and move print to more cost effective centralized network devices.' rows='2'></textarea>
            </div>

            <div class="form-group">
                <label for="AdditionalComments" class="control-label fontWeightNormal">Any additional comments:</label>
                <textarea class="form-control" id="AdditionalComments" rows='2'></textarea>
            </div>



        </div>
    </div>

    <div class="row add-gutter marginTop20px pull-right">
        <a type="submit" class="btn btn-default btn-space-2x">Logout&nbsp;
            <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
        </a>
        <a class="btn btn-default" onclick="print();">Print&nbsp;
            <span class="glyphicon glyphicon-print" aria-hidden="true"></span>
        </a>
        <a class="btn btn-default btn-space-2x" onclick="reset();">Clear Form&nbsp;
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
        </a>
        <a type="submit" class="btn btn-primary" id='createWaiver'>
            Create Waiver&nbsp;
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        </a>
    </div>
</form>

<div style="clear: both"></div>

@section Scripts {
<script type="text/javascript">
    $(document).ready(function () {
        showIfSelected('#acquisitionType', ['#solicitationSubDiv'], {            valueList: ['1']        });
        showIfSelected('#acquisitionType', ['#statepriceSubDiv'], {            valueList: ['2']        });
        showIfSelected('#acquisitionType', ['#purchaseAmountDiv'], {            valueList: ['4']        });
        showIfSelected('#acquisitionType', ['#leaseTermsDiv','#leaseDurationDiv'], { valueList: ['3'] });
        showIfSelected('#printerType', ['#otherPrinterTypeDiv'], {            valueList: ['1']        });

        // $('.usd_input').mask('0000000.00', { reverse: true }); in case
    });

    $("#acquisitionType").on("change", function () {
        showIfSelected('#acquisitionType', ['#solicitationSubDiv'], {valueList: ['1']});
        showIfSelected('#acquisitionType', ['#statepriceSubDiv'], {valueList: ['2']});
        showIfSelected('#acquisitionType', ['#purchaseAmountDiv'], {valueList: ['4']});
        showIfSelected('#acquisitionType', ['#leaseTermsDiv','#leaseDurationDiv'], { valueList: ['3'] });
    });

    $("#printerType").on("change", function () {
        showIfSelected('#printerType', ['#otherPrinterTypeDiv'], {valueList: ['1']});
    });
</script>
}