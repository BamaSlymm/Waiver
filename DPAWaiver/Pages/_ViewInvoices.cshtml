@model List<DPAWaiver.Models.Waivers.BaseWaiverInvoice>
<div class="panel panel-primary marginTop20px">
    <div class="panel-heading">
        <h3 class="panel-title text-center">Invoices List</h3>
    </div>
    <div class="panel-body" style="padding: 20px">
      @if (Model.Count() != 0) {
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model[0].VendorName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].InvoiceNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].InvoiceDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model[0].InvoiceAmount)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                <tr>
                    <td style="vertical-align: middle">
                        <span title="@Html.DisplayFor(modelItem => item.ReasonForDifference)">@String.Format("{0:MM/dd/yyyy}",
                            item.VendorName)</span>
                    </td>
                    <td style="vertical-align: middle">
                        <span title="@Html.DisplayFor(modelItem => item.ReasonForDifference)">@Html.DisplayFor(modelItem
                            => item.InvoiceNumber)</span>
                    </td>
                    <td style="vertical-align: middle">
                        <span title="@Html.DisplayFor(modelItem => item.ReasonForDifference)">@String.Format("{0:MM/dd/yyyy}",
                            item.InvoiceDate)</span>
                    </td>
                    <td style="vertical-align: middle">
                        <span title="@Html.DisplayFor(modelItem => item.ReasonForDifference)">@String.Format("{0:C}",
                            item.InvoiceAmount)</span>
                    </td>
                </tr>
                }
            </tbody>
        </table>
      } else {
        <span>There are no invoices.</span>
      }
    </div>
</div>
