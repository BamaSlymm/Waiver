                                <label for='costOfLeasePerYear' class='control-label fontWeightNormal'>Cost of lease per year</label>
                                <input type='number' class='form-control' id='costOfLeasePerYear' aria-describedby='costOfLeasePerYear' placeholder='Cost of lease per year'>
                                <!-- TODO Hover help: Total lease ??? -->
                            </div>
                        </div>
                    </div>

