                            <div class='form-group required'>
                                <label for='leaseDuration' class='control-label fontWeightNormal'>Lease Duration</label>
                                <select class='form-control' id='leaseDuration' aria-describedby='leaseDuration'>
                                    <option value='48'>48 months</option>
                                    <option value='60'>60 months</option>
                                    <option value='0'>Other</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class='row' id='leaseTermsDiv'>
                        <div class='col-sm-6 col-xs-12'>
                            <div class='form-group required'>
                                <label for='numberOfMonths' class='control-label fontWeightNormal'>Number of Months of Lease</label>
                                <input type='number' class='form-control' id='numberOfMonths' aria-describedby='numberOfMonths' placeholder='Number of Months of Lease'>
                            </div>
                        </div>
                        <div class='col-sm-6 col-xs-12'>
                            <div class='form-group required'>
                                <label for='monthlyLeaseAmount' class='control-label fontWeightNormal'>Monthly Lease Amount</label>
                                <input type='number' class='form-control' id='monthlyLeaseAmount' aria-describedby='monthlyLeaseAmount' placeholder='Monthly Lease Amount'>
                            </div>
                        </div>
                    </div>
                    <!-- end of row -->

                    <div class='form-group required'>
                        <label for='makeAndModel' class='control-label fontWeightNormal'>Make and Model</label>
                        <input type='text' class='form-control' id='makeAndModel' aria-describedby='makeAndModel' placeholder='Make and Model'>
                    </div>

                    <div class="form-group required">
                        <label for="selectionReason" class="control-label fontWeightNormal">Reasons for selecting this particular equipment:</label>
                        <textarea class="form-control" id="selectionReason" aria-describedby="selectionReason" placeholder="Reasons for selection"
                            rows='2'></textarea>
                    </div>

                    <div class='row'>
                        <div class='col-sm-6 col-xs-12'>
                            <div class='form-group required'>
                                <label for='productionCapacity' class='control-label fontWeightNormal'>Production Capacity (throughput)
                                    <span class='glyphicon glyphicon-question-sign' data-toggle='tooltip' title='Production capacity (how many sheets per) also throughput'></span>
                                </label>
                                <input type='number' class='form-control' id='productionCapacity' aria-describedby='productionCapacity' placeholder='Production Capacity (throughput)'>
                            </div>
                        </div>
                        <div class='col-sm-6 col-xs-12'>
