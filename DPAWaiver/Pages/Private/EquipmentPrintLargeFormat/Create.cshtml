                    <input type="number" class="form-control" id="EquipmentPrintLargeFormatWaiver.CostEstimate" required="true" step="0.01">
                    <span asp-validation-for="EquipmentPrintLargeFormatWaiver.CostEstimate" class="text-danger"></span>
                </div>
            </div>
        </div>

    </div>
</div>

