                                <select class="form-control" id="statepriceSubType">
                                    <option>Cancelable Rental</option>
                                    <option>Lease</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6 col-xs-12" id="acquisitionTypeDiv">
                            <div class='form-group required'>
                                <label for='acquisitionType' class='control-label fontWeightNormal'>Purchase Amount</label>
                                <input type='number' class='form-control' id='acquisitionType' aria-describedby='acquisitionType' placeholder='Purchase Amount'>
                            </div>
                        </div>
