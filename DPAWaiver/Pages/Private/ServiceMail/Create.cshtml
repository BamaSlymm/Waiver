@page 
@model DPAWaiver.Pages.Private.ServiceMail.CreateModel 
@{ ViewData["Title"] = "Create Waiver - Service - Mail Service"; }

<h2>Create</h2>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <partial name="_UserInformation" model="@Model.UserWithDepartment" />
    @if (Model.ServiceMailWaiver.OtherFirstName != null && Model.ServiceMailWaiver.OtherLastName != null)
    {
    <div class="panel panel-primary marginTop20px">
        <div class="panel-heading">
            <h3 class="panel-title text-center">Waiver On Behalf Of</h3>
        </div>
        <div class="panel-body">

            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="ServiceMailWaiver.OtherFirstName" class="control-label fontWeightNormal"></label>
                    <input asp-for="ServiceMailWaiver.OtherFirstName" class="form-control" placeholder="@Html.DisplayNameFor(model => Model.ServiceMailWaiver.OtherFirstName)" />
                    <span asp-validation-for="ServiceMailWaiver.OtherFirstName" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="ServiceMailWaiver.OtherLastName" class="control-label fontWeightNormal"></label>
                    <input asp-for="ServiceMailWaiver.OtherLastName" class="form-control" placeholder="@Html.DisplayNameFor(model => Model.ServiceMailWaiver.OtherLastName)" />
                    <span asp-validation-for="ServiceMailWaiver.OtherLastName" class="text-danger"></span>
                </div>
            </div>

        </div>
    </div>
    }

<div class="panel panel-primary marginTop20px">
    <div class="panel-heading">
        <h3 class="panel-title text-center">Waiver Information</h3>
    </div>
    <div class="panel-body">
        <div class="row" style="margin-bottom: 14px">
            <div class="col-md-4 col-xs-4">
                Purpose: Service
            </div>
            <div class="col-md-4 col-xs-4">
                Type: Mail Service
            </div>
            <div class="col-md-4 col-xs-4">
                Status: Started
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-xs-12">
                <div class="form-group required">
                    <label for="projectName" class="control-label fontWeightNormal">Project Name:</label>
                    <input type="text" class="form-control" id="projectName" required="true" placeholder="Your Project Name">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-xs-6">
                <div class="form-group required">
                    <label for="SubmittedOn" class="control-label fontWeightNormal">Submitted Date:</label>
                    <input type="date" class="form-control" id="SubmittedOn" required="true" value="05/04/2018">
                </div>
            </div>
            <div class="col-md-6 col-xs-6">
                <div class="form-group required">
                    <label for="CostEstimate" class="control-label fontWeightNormal">Project Budget/Cost Estimate:</label>
                    <span class="glyphicon glyphicon-info-sign" data-toggle="tooltip" title="Enter the project cost and estimate such as 9999.99"></span>
                    <input type="number" class="form-control" id="CostEstimate" required="true" value="5000.03">
                </div>
            </div>

        </div>

    </div>
</div>

<div class="panel panel-primary marginTop20px">
    <div class="panel-heading">
        <h3 class="panel-title text-center">Waiver Details</h3>
    </div>
    <div class="panel-body">
        <div class="form-group required">
            <label for="itemDescription" class="control-label fontWeightNormal">Describe the item to be mailed:</label>
            <textarea class="form-control" id="itemDescription" rows='2'></textarea>
        </div>
        <div class="form-group required">
            <label for="jobDescription" class="control-label fontWeightNormal">Describe the job and services required:</label>
            <textarea class="form-control" id="jobDescription" rows='2'></textarea>
        </div>
        <div class="form-group required">
            <label for="typeOfStock" class="control-label fontWeightNormal">What stock is the item to be mailed and/or printed on:</label>
            <select class="form-control" id="typeOfStock">
                <option>10x14</option>
                <option>Regular size business</option>
                <option value='0'>Other</option>
            </select>
        </div>
        <div class="form-group required" id='otherDescriptionId'>
            <label for="otherDescription" class="control-label fontWeightNormal">If other, please explain:</label>
            <input type="text" class="form-control" id="otherDescription">
        </div>
        <div class="row">
            <div class="col-md-6 col-xs-6">
                <div class="form-group required">
                    <label for="numberOfPackets" class="control-label fontWeightNormal">Number of packets to be mailed:<span class="glyphicon glyphicon-info-sign" data-toggle="tooltip" title="Enter the number of packets to be mailed. 
This is a numeric field."></span></label>
                    <input type="number" class="form-control" id="numberOfPackets" aria-describedby="numberOfPackets" placeholder="Number of Packets">
                </div>
            </div>
            <div class="col-md-6 col-xs-6">
                <div class="form-group required">
                    <label for="mailingDate" class="control-label fontWeightNormal">Mailing Date:</label>
                    <input type="date" class="form-control" id="mailingDate" aria-describedby="mailingDate" placeholder="Date To Mail On(mm/dd/yyyy)">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-xs-6">
                <div class="form-group required">
                    <label for="mailPermit" class="control-label fontWeightNormal">Do you plan to use our mail permit:</label>
                    <select class="form-control" id="mailPermit">
                        <option>Yes</option>
                        <option>No</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6 col-xs-6">
                <div class="form-group required">
                    <label for="mailRate" class="control-label fontWeightNormal">Mail Rate:<span class="glyphicon glyphicon-info-sign" data-toggle="tooltip" title="Enter the mail rate. This is a numeric field; decimal can be used (i.e. 0.44)"></span></label>
                    <input type="number" class="form-control" id="mailRate" aria-describedby="mailRate" placeholder="Mail Rate">
                </div>
            </div>
        </div>

    </div>
</div>


<div class="row add-gutter marginTop20px pull-right">
    <a type="submit" class="btn btn-default btn-space-2x">Logout&nbsp;
        <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
    </a>
    <a class="btn btn-default" onclick="print();">Print&nbsp;
        <span class="glyphicon glyphicon-print" aria-hidden="true"></span>
    </a>
    <a class="btn btn-default btn-space-2x" onclick="reset();">Clear Form&nbsp;
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
    </a>
    <a type="submit" class="btn btn-primary">Create Waiver&nbsp;
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    </a>
</div>
</form>

@section Scripts {
<script type="text/javascript">
    $(document).ready(function () {
        showIfSelected('#typeOfStock', ['#otherDescriptionId'], {  valueList: ['0'] });
 
        // $('.usd_input').mask('0000000.00', { reverse: true }); in case
    });

    $("#typeOfStock").on("change", function () {
        showIfSelected('#typeOfStock', ['#otherDescriptionId'], {valueList: ['0']});
    });
</script>
}