@page
@model DPAWaiver.Pages.Private.ServiceMail.EditModel
@{ ViewData["Title"] = "Edit Waiver - Service - Mail Service"; }

<h2>Create</h2>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <partial name="_UserInformation" model="@Model.UserWithDepartment" />
    @if (Model.ServiceMailWaiver.OtherFirstName != null && Model.ServiceMailWaiver.OtherLastName != null)
    {
    <div class="panel panel-primary marginTop20px">
        <div class="panel-heading">
            <h3 class="panel-title text-center">Waiver On Behalf Of</h3>
        </div>
        <div class="panel-body">

            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="ServiceMailWaiver.OtherFirstName" class="control-label fontWeightNormal"></label>
                    <input asp-for="ServiceMailWaiver.OtherFirstName" class="form-control"
                        placeholder="@Html.DisplayNameFor(model => Model.ServiceMailWaiver.OtherFirstName)" />
                    <span asp-validation-for="ServiceMailWaiver.OtherFirstName" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="ServiceMailWaiver.OtherLastName" class="control-label fontWeightNormal"></label>
                    <input asp-for="ServiceMailWaiver.OtherLastName" class="form-control"
                        placeholder="@Html.DisplayNameFor(model => Model.ServiceMailWaiver.OtherLastName)" />
                    <span asp-validation-for="ServiceMailWaiver.OtherLastName" class="text-danger"></span>
                </div>
            </div>

        </div>
    </div>
    }

    <div class="panel panel-primary marginTop20px">
        <div class="panel-heading">
            <h3 class="panel-title text-center">Waiver Information</h3>
        </div>
        <div class="panel-body">
            <div class="row" style="margin-bottom: 14px">
                <div class="col-md-4 col-xs-4">
                    Purpose: Service
                </div>
                <div class="col-md-4 col-xs-4">
                    Type: Mail Service
                </div>
                <div class="col-md-4 col-xs-4">
                    Status: @Model.ServiceMailWaiver.Status
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-xs-12">
                    <div class="form-group required">
                        <label asp-for="ServiceMailWaiver.projectName" class="control-label fontWeightNormal">Project
                            Name:</label>
                        <input type="text" class="form-control" asp-for="ServiceMailWaiver.projectName" required="true"
                            placeholder="Your Project Name">
                        <span asp-validation-for="ServiceMailWaiver.projectName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-xs-6">
                    <div class="form-group required">
                        <label asp-for="ServiceMailWaiver.SubmittedOn" class="control-label fontWeightNormal">Submitted
                            Date:</label>
                        <input type="date" class="form-control" asp-for="ServiceMailWaiver.SubmittedOn" required="true"
                            value="05/04/2018">
                        <span asp-validation-for="ServiceMailWaiver.SubmittedOn" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 col-xs-6">
                    <div class="form-group required">
                        <label asp-for="ServiceMailWaiver.CostEstimate" class="control-label fontWeightNormal">Project
                            Budget/Cost Estimate:</label>
                        <span class="glyphicon glyphicon-info-sign" data-toggle="tooltip"
                            title="Enter the project cost and estimate such as 9999.99"></span>
                        <input type="number" class="form-control" asp-for="ServiceMailWaiver.CostEstimate"
                            required="true" placeholder="Please Enter Cost" step="0.01">
                        <span asp-validation-for="ServiceMailWaiver.CostEstimate" class="text-danger"></span>
                    </div>
                </div>

            </div>

        </div>
    </div>

    <div class="panel panel-primary marginTop20px">
        <div class="panel-heading">
            <h3 class="panel-title text-center">Waiver Details</h3>
        </div>
        <div class="panel-body">
            <div class="form-group required">
                <label asp-for="ServiceMailWaiver.ItemDescription" class="control-label fontWeightNormal">Describe the
                    item to be mailed:</label>
                <textarea class="form-control" asp-for="ServiceMailWaiver.ItemDescription" rows='2'></textarea>
                <span asp-validation-for="ServiceMailWaiver.ItemDescription" class="text-danger"></span>
            </div>
            <div class="form-group required">
                <label asp-for="ServiceMailWaiver.JobDescription" class="control-label fontWeightNormal">Describe the
                    job and services required:</label>
                <textarea class="form-control" asp-for="ServiceMailWaiver.JobDescription" rows='2'></textarea>
                <span asp-validation-for="ServiceMailWaiver.JobDescription" class="text-danger"></span>
            </div>
            <div class="form-group required">
                <label asp-for="ServiceMailWaiver.TypeofStock" class="control-label fontWeightNormal">What stock is the
                    item to be mailed and/or printed on:</label>
                <select class="form-control" asp-for="ServiceMailWaiver.TypeofStock">
                    <option>10x14</option>
                    <option>Regular size business</option>
                    <option value='0'>Other</option>
                </select>
                <span asp-validation-for="ServiceMailWaiver.TypeofStock" class="text-danger"></span>
            </div>
            <div class="form-group required" id='OtherDescriptionId'>
                <label asp-for="ServiceMailWaiver.OtherDescription" class="control-label fontWeightNormal">If other,
                    please explain:</label>
                <input type="text" class="form-control" asp-for="ServiceMailWaiver.OtherDescription">
                <span asp-validation-for="ServiceMailWaiver.OtherDescription" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6 col-xs-6">
                    <div class="form-group required">
                        <label asp-for="ServiceMailWaiver.NumberofPackets" class="control-label fontWeightNormal">Number
                            of packets to be mailed:<span class="glyphicon glyphicon-info-sign" data-toggle="tooltip"
                                title="Enter the number of packets to be mailed. 
This is a numeric field."></span></label>
                        <input type="number" class="form-control" asp-for="ServiceMailWaiver.NumberofPackets"
                            aria-describedby="NumberofPackets" placeholder="Number of Packets">
                        <span asp-validation-for="ServiceMailWaiver.NumberofPackets" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 col-xs-6">
                    <div class="form-group required">
                        <label asp-for="ServiceMailWaiver.MailingDate" class="control-label fontWeightNormal">Mailing
                            Date:</label>
                        <input type="date" class="form-control" asp-for="ServiceMailWaiver.MailingDate"
                            aria-describedby="MailingDate" placeholder="Date To Mail On(mm/dd/yyyy)">
                        <span asp-validation-for="ServiceMailWaiver.MailingDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-xs-6">
                    <div class="form-group required">
                        <label asp-for="ServiceMailWaiver.MailPermit" class="control-label fontWeightNormal">Do you plan
                            to use our mail permit:</label>
                        <select class="form-control" asp-for="ServiceMailWaiver.MailPermit">
                            <option>Yes</option>
                            <option>No</option>
                        </select>
                        <span asp-validation-for="ServiceMailWaiver.MailPermit" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 col-xs-6">
                    <div class="form-group required">
                        <label asp-for="ServiceMailWaiver.MailRate" class="control-label fontWeightNormal">Mail
                            Rate:<span class="glyphicon glyphicon-info-sign" data-toggle="tooltip"
                                title="Enter the mail rate. This is a numeric field; decimal can be used (i.e. 0.44)"></span></label>
                        <input type="number" class="form-control" asp-for="ServiceMailWaiver.MailRate"
                            aria-describedby="MailRate" placeholder="Mail Rate">
                        <span asp-validation-for="ServiceMailWaiver.MailRate" class="text-danger"></span>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <partial name="_ViewInvoices" model="@Model.Invoices" />
    <partial name="_ViewAttachments" model="@Model.Attachments" />

    <div class="row add-gutter marginTop20px">
        <div class="pull-right">
            <a class="btn btn-default" asp-page="/Private/Invoice/Invoice" asp-route-id="@Model.ID" title="Add Invoice"
                id='addInvoiceButton'>Add Invoice&nbsp;<span class="glyphicon glyphicon-credit-card"
                    aria-hidden="true"></span></a>
            <a class="btn btn-default" asp-page="/Private/Attachment/Attachment" asp-route-id="@Model.ID"
                title="Upload Supporting Documents" id='uploadAttachmentButton'>Upload Documents&nbsp;<span
                    class="glyphicon glyphicon-file" aria-hidden="true"></span>
            </a>

            <a class="btn btn-default" onclick="print();">Print&nbsp;
                <span class="glyphicon glyphicon-print" aria-hidden="true"></span>
            </a>
            <a class="btn btn-default btn-space-2x" asp-page="/Private/WaiverList">Waiver List&nbsp;
                <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
            </a>
            <button type="submit" class="btn btn-primary" id='updateWaiver'>
                Update Waiver&nbsp;<span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
            </button>
        </div>
    </div>

</form>

<partial name='_Logout' />
@section Scripts {
<script type="text/javascript">
    $(document).ready(function () {
        showIfSelected('#ServiceMailWaiver_TypeofStock', ['#ServiceMailWaiver_OtherDescription'], {
            valueList: ['0']
        });

        // $('.usd_input').mask('0000000.00', { reverse: true }); in case
    });

    $("#ServiceMailWaiver_TypeofStock").on("change", function () {
        showIfSelected('#ServiceMailWaiver_TypeofStock', ['#ServiceMailWaiver_OtherDescription'], {
            valueList: ['0']
        });
    });
</script>
}