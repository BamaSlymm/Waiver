@page
@model DPAWaiver.Pages.Private.ServiceDesign.DeleteModel

@{
ViewData["Title"] = "Delete";
}

@if (Model.ServiceDesignWaiver.CreatedBy.Id != Model.UserWithDepartment.Id)
{
<partial name="_UserInformation" model="@Model.ServiceDesignWaiver.CreatedBy" />
}
<partial name="_WaiverInformationDisplayOnly" model="@Model.ServiceDesignWaiver" />
<div class="panel panel-primary marginTop20px">
    <div class="panel-heading">
        <h3 class="panel-title text-center">Waiver Details</h3>
    </div>
    <div class="panel-body">
        <div class="form-group required">
            <dl class='custom-dl'>
                <dt>@Html.DisplayNameFor(model => model.ServiceDesignWaiver.ItemToBeDesigned)/dt>
                <dd>@Html.DisplayFor(model => model.ServiceDesignWaiver.ItemToBeDesigned)</dd>
            </dl><!-- dl end of ServiceDesignWaiver.ItemToBeDesigned -->
        </div>
        <div class="row">
            <div class="col-sm-6 col-md-6 col-xs-12">
                <div class="form-group required">
                    <dl class='custom-dl'>
                        <dt>@Html.DisplayNameFor(model => model.ServiceDesignWaiver.EstimatedNumberOfHours)</dt>
                        <dd>@Html.DisplayFor(model => model.ServiceDesignWaiver.EstimatedNumberOfHours)</dd>
                    </dl><!-- dl end of ServiceDesignWaiver.EstimatedNumberofHours -->
                </div>
            </div>
            <div class="col-sm-6 col-md-6 col-xs-12">
                <div class="form-group required">
                    <dl class='custom-dl'>
                        <dt>@Html.DisplayNameFor(model => model.ServiceDesignWaiver.OtherDescription)</dt>
                        <dd>@Html.DisplayFor(model => model.ServiceDesignWaiver.OtherDescription)</dd>
                    </dl><!-- dl end of ServiceDesignWaiver.OtherDescription -->
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 col-md-6 col-xs-12">
                <div class="form-group required">
                    <dl class='custom-dl'>
                        <dt>@Html.DisplayNameFor(model => model.ServiceDesignWaiver.DueDate)</dt>
                        <dd>@Html.DisplayFor(model => model.ServiceDesignWaiver.DueDate)</dd>
                    </dl><!-- dl end of ServiceDesignWaiver.DueDate -->
                </div>
            </div>
            <div class="col-sm-6 col-md-6 col-xs-12">
                <div class="form-group required">
                    <dl class='custom-dl'>
                        <dt>@Html.DisplayNameFor(model => model.ServiceDesignWaiver.StartedOn)</dt>
                        <dd>@Html.DisplayFor(model => model.ServiceDesignWaiver.StartedOn)</dd>
                    </dl><!-- dl end of ServiceDesignWaiver.StartedOn -->
                </div>
            </div>
        </div>
        <div class="form-group required">
            <dl class='custom-dl'>
                <dt>@Html.DisplayNameFor(model => model.ServiceDesignWaiver.OtherDescription)</dt>
                <dd>@Html.DisplayFor(model => model.ServiceDesignWaiver.OtherDescription)</dd>
            </dl><!-- dl end of ServiceDesignWaiver.OtherDescription -->
        </div>
        <div class="form-group required">
            <dl class='custom-dl'>
                <dt>@Html.DisplayNameFor(model => model.ServiceDesignWaiver.AdditionalComments)</dt>
                <dd>@Html.DisplayFor(model => model.ServiceDesignWaiver.AdditionalComments)</dd>
            </dl><!-- dl end of ServiceDesignWaiver.AdditionalComments -->
        </div>
    </div>
   <div class="row add-gutter marginTop20px pull-right">

        <a class="btn btn-default" onclick="print();">Print&nbsp;
            <span class="glyphicon glyphicon-print" aria-hidden="true"></span>
        </a>
        <a class="btn btn-default btn-space-2x" asp-page="/Private/WaiverList">Waiver List&nbsp;
            <span class="glyphicon glyphicon-print" aria-hidden="true"></span>
        </a>
        <form method="post" style="display: inline;">
            <input type="hidden" asp-for="ServiceDesignWaiver.ID" />
            <button type="submit" value="Delete" class="btn btn-primary">
                Delete Waiver&nbsp;<span class="glyphicon glyphicon-trash"></span>
            </button>
        </form>

    </div>
</div>