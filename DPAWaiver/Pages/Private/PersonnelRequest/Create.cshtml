@page 
@model DPAWaiver.Pages.Private.PersonnelRequest.CreateModel 
@{ ViewData["Title"] = "Create Waiver - Personnel - State Employee"; }

<h2>Create</h2>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <partial name="_UserInformation" model="@Model.UserWithDepartment" />
    @if (Model.PersonnelRequestWaiver.OtherFirstName != null && Model.PersonnelRequestWaiver.OtherLastName != null)
    {
    <div class="panel panel-primary marginTop20px">
        <div class="panel-heading">
            <h3 class="panel-title text-center">Waiver On Behalf Of</h3>
        </div>
        <div class="panel-body">

            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="PersonnelRequestWaiver.OtherFirstName" class="control-label fontWeightNormal"></label>
                    <input asp-for="PersonnelRequestWaiver.OtherFirstName" class="form-control" placeholder="@Html.DisplayNameFor(model => Model.PersonnelRequestWaiver.OtherFirstName)" />
                    <span asp-validation-for="PersonnelRequestWaiver.OtherFirstName" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="PersonnelRequestWaiver.OtherLastName" class="control-label fontWeightNormal"></label>
                    <input asp-for="PersonnelRequestWaiver.OtherLastName" class="form-control" placeholder="@Html.DisplayNameFor(model => Model.PersonnelRequestWaiver.OtherLastName)" />
                    <span asp-validation-for="PersonnelRequestWaiver.OtherLastName" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    }

<div class="panel panel-primary marginTop20px">
    <div class="panel-heading">
        <h3 class="panel-title text-center">Waiver Information</h3>
    </div>
    <div class="panel-body">
        <div class="row" style="margin-bottom: 14px">
            <div class="col-md-4 col-xs-4">
                Purpose: Personnel Request
            </div>
            <div class="col-md-4 col-xs-4">
                Type: State Employee
            </div>
            <div class="col-md-4 col-xs-4">
                Status: Started
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-xs-12">
                <div class="form-group required">
                    <label for="projectName" class="control-label fontWeightNormal">Project Name:</label>
                    <input type="text" class="form-control" id="projectName" required="true" placeholder="Your Project Name">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-xs-12">
                <div class="form-group required">
                    <label for="SubmittedOn" class="control-label fontWeightNormal">Submitted Date:</label>
                    <input type="date" class="form-control" id="SubmittedOn" required="true" value="05/04/2018">
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="form-group required">
                    <label for="CostEstimate" class="control-label fontWeightNormal">Cost Estimate:</label>
                    <span class="glyphicon glyphicon-info-sign" data-toggle="tooltip" title="Enter the project cost and estimate such as 9999.99"></span>
                    <input type="number" class="form-control" id="CostEstimate" required="true" value="5000.03">
                </div>
            </div>

        </div>

    </div>
</div>

<div class="panel panel-primary marginTop20px">
    <div class="panel-heading">
        <h3 class="panel-title text-center">Waiver Details</h3>
    </div>
        <div class="col-md-12 col-xs-8">
            <div class="form-group required">
                <label for="employeeType" class="control-label fontWeightNormal">Employee Type:</label>
                <select class="form-control control-label" id="employeeType">
                    <option>Full Time Employee</option>
                    <option>Permanent Part Time State Employee</option>
                    <option>State Temp</option>
                </select>
            </div>
        </div>
    <div class="panel-body">
        <div class="form-group required">
            <label for="JobDuties" class="control-label fontWeightNormal">Describe the job duties:</label>
            <textarea class="form-control" id="JobDuties" rows='2'></textarea>
        </div>
        <div class="col-sm-6 col-xs-12">
            <div class="form-group required">
                <label for="EstimatedNumberOfStaff" class="control-label fontWeightNormal">Estimated number of staff requested:
                    <i class="glyphicon glyphicon-info-sign" data-toggle="tooltip" title="Enter the estimated number of full time employees needed to complete this project. This is a numeric field. Decimal can be used (i.e. 1.5 which would be equal to 1 1/2 employees)"></i>
                </label>
            <input type="number" class="form-control" id="EstimatedNumberOfStaff" aria-describedby="EstimatedNumberOfStaff" placeholder="Estimated Number of Staff">
            </div>
        </div>
        <div class="col-sm-6 col-xs-12">
            <div class="form-group required">
                <label for="positionFile" class="control-label fontWeightNormal">Upload State Position Description</label>
                <input type="file" class="form-control-file" id="positionFile">
            </div>
        </div>
            <div class="col-md-4 col-xs-12">
                <div class="form-group required">
                    <label for="EstimatedNumberOfFTE" class="control-label fontWeightNormal">Total estimated number of FTE:
                        <i class="glyphicon glyphicon-info-sign" data-toggle="tooltip" title="Enter the estimated number of full time employees needed to complete this project. 
This is a numeric field. Decimal can be used (i.e. 1.5 which would be equal to 1 1/2 employees)"></i>
                    </label>
                    <input type="number" class="form-control" id="EstimatedNumberOfFTE" aria-describedby="EstimatedNumberOfFTE" placeholder="Full Time Employee Count">
                </div>
            </div>
        <div class="col-md-12 col-xs-8">
            <div class="form-group required">
                <label for="RequestedClassification" class="control-label fontWeightNormal">Requested Classification<i>(One waiver request per classification)</i>:</label>
                <select class="form-control control-label" id="RequestedClassification">
                    <option>Accountant I</option>
                    <option>Accountant II</option>
                    <option>Accountant III</option>
                </select>
            </div>
            <div class="form-group required">
                <label for="RequestedSalary" class="control-label fontWeightNormal">Requested Loaded Salary (complete state benefit package)</label>
                <input type="number" class="form-control" id="RequestedSalary" aria-describedby="RequestedSalary" placeholder="Requested Loaded Salary">
            </div>
        </div>
        <div class="form-group required">
            <label for="DetailJustification" class="control-label fontWeightNormal">Please detail justification for request.</label>
            <textarea class="form-control" id="DetailJustification" rows="2"></textarea>
        </div>
        <div class="form-group">
            <label for="AdditionalComments" class="control-label fontWeightNormal">Any additional comments:</label>
            <textarea class="form-control" id="AdditionalComments" rows='2'></textarea>
        </div>
    </div>
</div>
</div>
</div>




<div class="row add-gutter marginTop20px pull-right">
    <a type="submit" class="btn btn-default btn-space-2x">Logout&nbsp;
        <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
    </a>
    <a class="btn btn-default" onclick="print();">Print&nbsp;
        <span class="glyphicon glyphicon-print" aria-hidden="true"></span>
    </a>
    <a class="btn btn-default btn-space-2x" onclick="reset();">Clear Form&nbsp;
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
    </a>
    <a type="submit" class="btn btn-primary">Create Waiver&nbsp;
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    </a>
    </a>
</div>
</form>

<partial name='_Logout' />
<div style="clear: both"></div>

@section Scripts {
<script type="text/javascript">
</script>
}