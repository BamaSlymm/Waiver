@page 
@model DPAWaiver.Pages.Private.PersonnelRequest.CreateModel 
@{ ViewData["Title"] = "Create Waiver - Personnel - State Employee"; }

<h2>Create</h2>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <partial name="_UserInformation" model="@Model.UserWithDepartment" />
    @if (Model.PersonnelRequestWaiver.OtherFirstName != null && Model.PersonnelRequestWaiver.OtherLastName != null)
    {
    <div class="panel panel-primary marginTop20px">
        <div class="panel-heading">
            <h3 class="panel-title text-center">Waiver On Behalf Of</h3>
        </div>
        <div class="panel-body">

            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="PersonnelRequestWaiver.OtherFirstName" class="control-label fontWeightNormal"></label>
                    <input asp-for="PersonnelRequestWaiver.OtherFirstName" class="form-control" placeholder="@Html.DisplayNameFor(model => Model.PersonnelRequestWaiver.OtherFirstName)" />
                    <span asp-validation-for="PersonnelRequestWaiver.OtherFirstName" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="PersonnelRequestWaiver.OtherLastName" class="control-label fontWeightNormal"></label>
                    <input asp-for="PersonnelRequestWaiver.OtherLastName" class="form-control" placeholder="@Html.DisplayNameFor(model => Model.PersonnelRequestWaiver.OtherLastName)" />
                    <span asp-validation-for="PersonnelRequestWaiver.OtherLastName" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    }

<div class="panel panel-primary marginTop20px">
    <div class="panel-heading">
        <h3 class="panel-title text-center">Waiver Information</h3>
    </div>
    <div class="panel-body">
        <div class="row" style="margin-bottom: 14px">
            <div class="col-md-4 col-xs-4">
                Purpose: Personnel Request
            </div>
            <div class="col-md-4 col-xs-4">
                Type: State Employee
            </div>
            <div class="col-md-4 col-xs-4">
                Status: Started
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-xs-12">
                <div class="form-group required">
                    <label asp-for="PersonnelRequestWaiver.projectName" class="control-label fontWeightNormal">Project Name:</label>
                    <input type="text" class="form-control" asp-for="PersonnelRequestWaiver.projectName" required="true" placeholder="Your Project Name">
                    <span asp-validation-for="PersonnelRequestWaiver.projectName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-xs-12">
                <div class="form-group required">
                    <label asp-for="PersonnelRequestWaiver.SubmittedOn" class="control-label fontWeightNormal">Submitted Date:</label>
                    <input type="date" class="form-control" asp-for="PersonnelRequestWaiver.SubmittedOn" required="true" value="05/04/2018">
                    <span asp-validation-for="PersonnelRequestWaiver.SubmittedOn" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="form-group required">
                    <label asp-for="PersonnelRequestWaiver.CostEstimate" class="control-label fontWeightNormal">Cost Estimate:</label>
                    
                    <input type="number" class="form-control" asp-for="PersonnelRequestWaiver.CostEstimate" required="true" step="0.01">
                    <span asp-validation-for="PersonnelRequestWaiver.CostEstimate" class="text-danger"></span>
                </div>
            </div>

        </div>

    </div>
</div>

<div class="panel panel-primary marginTop20px">
    <div class="panel-heading">
        <h3 class="panel-title text-center">Waiver Details</h3>
    </div>
        <div class="col-md-12 col-xs-8">
            <div class="form-group required">
                <label asp-for="PersonnelRequestWaiver.employeeType" class="control-label fontWeightNormal">Employee Type:</label>
                <select class="form-control control-label" asp-for="PersonnelRequestWaiver.employeeType">
                    <option>Full Time Employee</option>
                    <option>Permanent Part Time State Employee</option>
                    <option>State Temp</option>
                </select>
                <span asp-validation-for="PersonnelRequestWaiver.employeeType" class="text-danger"></span>
            </div>
        </div>
    <div class="panel-body">
        <div class="form-group required">
            <label asp-for="PersonnelRequestWaiver.JobDuties" class="control-label fontWeightNormal">Describe the job duties:</label>
            <textarea class="form-control" asp-for="PersonnelRequestWaiver.JobDuties" rows='2'></textarea>
            <span asp-validation-for="PersonnelRequestWaiver.JobDuties" class="text-danger"></span>
        </div>
        <div class="col-sm-6 col-xs-12">
            <div class="form-group required">
                <label asp-for="PersonnelRequestWaiver.EstimatedNumberofStaff" class="control-label fontWeightNormal">Estimated number of staff requested:
                    <i class="glyphicon glyphicon-info-sign" data-toggle="tooltip" title="Enter the estimated number of full time employees needed to complete this project. This is a numeric field. Decimal can be used (i.e. 1.5 which would be equal to 1 1/2 employees)"></i>
                </label>
            <input type="number" class="form-control" asp-for="PersonnelRequestWaiver.EstimatedNumberofStaff" aria-describedby="EstimatedNumberofStaff" placeholder="Estimated Number of Staff">
            <span asp-validation-for="PersonnelRequestWaiver.EstimatedNumberofStaff" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-6 col-xs-12">
            <div class="form-group required">
                <label asp-for="PersonnelRequestWaiver.positionFile" class="control-label fontWeightNormal">Upload State Position Description</label>
                <input type="file" class="form-control-file" asp-for="PersonnelRequestWaiver.positionFile">
                <span asp-validation-for="PersonnelRequestWaiver.positionFile" class="text-danger"></span>
            </div>
        </div>
            <div class="col-md-4 col-xs-12">
                <div class="form-group required">
                    <label asp-for="PersonnelRequestWaiver.EstimatedNumberofFTE" class="control-label fontWeightNormal">Total estimated number of FTE:
                        <i class="glyphicon glyphicon-info-sign" data-toggle="tooltip" title="Enter the estimated number of full time employees needed to complete this project. 
This is a numeric field. Decimal can be used (i.e. 1.5 which would be equal to 1 1/2 employees)"></i>
                    </label>
                    <input type="number" class="form-control" asp-for="PersonnelRequestWaiver.EstimatedNumberofFTE" aria-describedby="EstimatedNumberofFTE" placeholder="Full Time Employee Count">
                    <span asp-validation-for="PersonnelRequestWaiver.EstimatedNumberofFTE" class="text-danger"></span>
                </div>
            </div>
        <div class="col-md-12 col-xs-8">
            <div class="form-group required">
                <label asp-for="PersonnelRequestWaiver.RequestedClassification" class="control-label fontWeightNormal">Requested Classification<i>(One waiver request per classification)</i>:</label>
                <select class="form-control control-label" asp-for="PersonnelRequestWaiver.RequestedClassification">
                    <option>Accountant I</option>
                    <option>Accountant II</option>
                    <option>Accountant III</option>
                </select>
                <span asp-validation-for="PersonnelRequestWaiver.RequestedClassification" class="text-danger"></span>
            </div>
            <div class="form-group required">
                <label asp-for="PersonnelRequestWaiver.RequestedSalary" class="control-label fontWeightNormal">Requested Loaded Salary (complete state benefit package)</label>
                <input type="number" class="form-control" asp-for="PersonnelRequestWaiver.RequestedSalary" aria-describedby="RequestedSalary" placeholder="Requested Loaded Salary">
                <span asp-validation-for="PersonnelRequestWaiver.RequestedSalary" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group required">
            <label asp-for="PersonnelRequestWaiver.DetailJustification" class="control-label fontWeightNormal">Please detail justification for request.</label>
            <textarea class="form-control" asp-for="PersonnelRequestWaiver.DetailJustification" rows="2"></textarea>
            <span asp-validation-for="PersonnelRequestWaiver.DetailJustification" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PersonnelRequestWaiver.AdditionalComments" class="control-label fontWeightNormal">Any additional comments:</label>
            <textarea class="form-control" asp-for="PersonnelRequestWaiver.AdditionalComments" rows='2'></textarea>
            <span asp-validation-for="PersonnelRequestWaiver.AdditionalComments" class="text-danger"></span>
        </div>
    </div>
</div>






<div class="row add-gutter marginTop20px pull-right">
        <a class="btn btn-default" onclick="print();">Print&nbsp;
            <span class="glyphicon glyphicon-print" aria-hidden="true"></span>
        </a>
        <button class="btn btn-default btn-space-2x" type="reset">Clear Form&nbsp;
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            </button>
        <button type="submit" class="btn btn-primary" id='createwaiver' value='Submit'>
                Create Waiver&nbsp;<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        </button>
        </a>
    </div>
</form>

<partial name='_Logout' />
<div style="clear: both"></div>

@section Scripts {
}