@page 
@model DPAWaiver.Pages.Private.SoftwareMailProcessing.CreateModel  
@{ ViewData["Title"] = "Create Waiver - Software - Design";}

<h2>Create</h2>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <partial name="_UserInformation" model="@Model.UserWithDepartment" />
    @if (Model.SoftwareMailProcessingWaiver.OtherFirstName != null && Model.SoftwareMailProcessingWaiver.OtherLastName != null)
    {
    <div class="panel panel-primary marginTop20px">
        <div class="panel-heading">
            <h3 class="panel-title text-center">User Infromation</h3>
        </div>
        <div class="panel-body">

            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="SoftwareMailProcessingWaiver.OtherFirstName" class="control-label fontWeightNormal"></label>
                    <input asp-for="SoftwareMailProcessingWaiver.OtherFirstName" class="form-control" placeholder="@Html.DisplayNameFor(model => Model.SoftwareMailProcessingWaiver.OtherFirstName)" />
                    <span asp-validation-for="SoftwareMailProcessingWaiver.OtherFirstName" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="SoftwareMailProcessingWaiver.OtherLastName" class="control-label fontWeightNormal"></label>
                    <input asp-for="SoftwareMailProcessingWaiver.OtherLastName" class="form-control" placeholder="@Html.DisplayNameFor(model => Model.SoftwareMailProcessingWaiver.OtherLastName)" />
                    <span asp-validation-for="SoftwareMailProcessingWaiver.OtherLastName" class="text-danger"></span>
                </div>
            </div>

        </div>
    </div>
    }

<div class="panel panel-primary marginTop20px">
    <div class="panel-heading">
        <h3 class="panel-title text-center">Waiver Information</h3>
    </div>
    <div class="panel-body">
        <div class="row" style="margin-bottom: 14px">
            <div class="col-md-4 col-xs-4">
                Purpose: Software Related to Services
            </div>
            <div class="col-md-4 col-xs-4">
                Type: Mail Processing
            </div>
            <div class="col-md-4 col-xs-4">
                Status: Started
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-xs-12">
                <div class="form-group required">
                    <label asp-for="SoftwareMailProcessingWaiver.projectName" class="control-label fontWeightNormal">Project Name:</label>
                    <input type="text" class="form-control" id="projectName" required="true" placeholder="Your Project Name">
                    <span asp-validation-for="SoftwareMailProcessingWaiver.projectName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-xs-12">
                <div class="form-group required">
                    <label asp-for="SoftwareMailProcessingWaiver.SubmittedOn" class="control-label fontWeightNormal">Submitted Date:</label>
                    <input type="date" class="form-control" id="SubmittedOn" required="true" value="05/04/2018">
                    <span asp-validation-for="SoftwareMailProcessingWaiver.SubmittedOn" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6 col-xs-12">
                <div class="form-group required">
                    <label asp-for="SoftwareMailProcessingWaiver.CostEstimate" class="control-label fontWeightNormal">Project Budget/Cost Estimate:</label>
                    <span class="glyphicon glyphicon-info-sign" data-toggle="tooltip" title="Enter the project cost and estimate such as 9999.99"></span>
                    <input type="number" class="form-control" id="CostEstimate" required="true" value="5000.03">
                    <span asp-validation-for="SoftwareMailProcessingWaiver.CostEstimate" class="text-danger"></span>
                </div>
            </div>
        </div>

    </div>
</div>

<div class="panel panel-primary marginTop20px">
    <div class="panel-heading">
        <h3 class="panel-title text-center">Waiver Details</h3>
    </div>
    <div class="panel-body">
        <div class='row'>
            <div class='col-sm-6 col-xs-12'>
                <div class='form-group required'>
                    <label asp-for='SoftwareMailProcessingWaiver.typeOfSoftware' class='control-label fontWeightNormal'>Type of software being requested</label>
                    <input type='text' class='form-control' id='typeOfSoftware' aria-describedby='typeOfSoftware' placeholder='Type of software being requested'>
                    <span asp-validation-for="SoftwareMailProcessingWaiver.typeOfSoftware" class="text-danger"></span>
                </div>
            </div>
            <div class='col-sm-6 col-xs-12'>
                <div class='form-group required'>
                    <label asp-for='SoftwareMailProcessingWaiver.numberOfLicenses' class='control-label fontWeightNormal'>Number of software licenses being requested</label>
                    <input type='number' class='form-control' id='numberOfLicenses' aria-describedby='numberOfLicenses' placeholder='Number of software licenses being requested'>
                    <span asp-validation-for="SoftwareMailProcessingWaiver.numberOfLicenses" class="text-danger"></span>
                </div>
            </div>
        </div>
        <!-- end of row -->

        <div class='row'>
            <div class='col-sm-6 col-xs-12'>
                <div class="form-group required">
                    <label asp-for="SoftwareMailProcessingWaiver.newOrReplace" class="control-label fontWeightNormal">Is this new addition or replacement?</label>
                    <select class="form-control" id="newOrReplace">
                        <option>Additional</option>
                        <option>New</option>
                        <option>Replacement</option>
                    </select>
                    <span asp-validation-for="SoftwareMailProcessingWaiver.newOrReplace" class="text-danger"></span>
                </div>
            </div>
            <div class='col-sm-6 col-xs-12'>
                <div class="form-group required">
                    <label asp-for='SoftwareMailProcessingWaiver.costOfPresentService' class='control-label fontWeightNormal'>Cost of Present Service
                        <span class='glyphicon glyphicon-question-sign' data-toggle='tooltip' title='Cost of Present Service'></span>
                    </label>
                    <input type='number' class='form-control' id='costOfPresentService' aria-describedby='costOfPresentService' placeholder='Cost of Present Service'>
                    <span asp-validation-for="SoftwareMailProcessingWaiver.costOfPresentService" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group required">
            <label asp-for="SoftwareMailProcessingWaiver.servicesReceived" class="control-label fontWeightNormal">How do you currently receive this services?</label>
            <textarea class="form-control" id="servicesReceived" rows="2" placeholder="if replacement please describe software version and Acquisition Date."></textarea>
            <span asp-validation-for="SoftwareMailProcessingWaiver.servicesReceived" class="text-danger"></span>
        </div>
        
        <div class="panel panel-primary marginTop40px">
            <div class="panel-heading">
                <h3 class="panel-title text-center">If you are requesting specific software, please complete the following</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6 col-xs-12">
                        <div class='form-group required'>
                            <label asp-for='SoftwareMailProcessingWaiver.softwareProvider' class='control-label fontWeightNormal'>Software Provider</label>
                            <input type='text' class='form-control' id='softwareProvider' aria-describedby='softwareProvider' placeholder='Software Provider'>
                            <span asp-validation-for="SoftwareMailProcessingWaiver.softwareProvider" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 col-xs-12">
                        <div class='form-group required'>
                            <label asp-for='SoftwareMailProcessingWaiver.softwareVersion' class='control-label fontWeightNormal'>Software Version</label>
                            <input type='text' class='form-control' id='softwareVersion' aria-describedby='softwareVersion' placeholder='Software Version'>
                            <span asp-validation-for="SoftwareMailProcessingWaiver.softwareVersion" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group required">
                    <label asp-for="SoftwareMailProcessingWaiver.selectionReason" class="control-label fontWeightNormal">Reasons for selecting this particular software:</label>
                    <textarea class="form-control" id="selectionReason" aria-describedby="selectionReason" placeholder="Reasons for selection"
                        rows='2'></textarea>
                    <span asp-validation-for="SoftwareMailProcessingWaiver.selectionReason" class="text-danger"></span>
                </div>

                <div class='form-group required'>
                    <label asp-for='SoftwareMailProcessingWaiver.expectedDuration' class='control-label fontWeightNormal'>Expected duration of use of software</label>
                    <input type='text' class='form-control' id='expectedDuration' aria-describedby='expectedDuration' placeholder='Expected duration of use of software'>
                    <span asp-validation-for="SoftwareMailProcessingWaiver.expectedDuration" class="text-danger"></span>
                </div>

                <div class='form-group required'>
                    <label asp-for='SoftwareMailProcessingWaiver.acquisitionType' class='control-label fontWeightNormal'>How do you plan to acquire this software.</label>
                    <textarea class='form-control' id='acquisitionType' aria-describedby='acquisitionType' 
                    placeholder='How do you plan to acquire this software.If there is a state price agreement, please provide details' 
                    rows='2'></textarea>
                    <span asp-validation-for="SoftwareMailProcessingWaiver.acquisitionType" class="text-danger"></span>
                </div>

                <div class='row'>
                    <div class='col-sm-6 col-xs-12'>
                        <div class="form-group required">
                            <label asp-for="SoftwareMailProcessingWaiver.subscriptionOrPurchase" class="control-label fontWeightNormal">Is this a subscription or purchase?</label>
                            <select class="form-control" id="subscriptionOrPurchase">
                                <option>Please select one</option>
                                <option value='1'>Subscription</option>
                                <option value='2'>Purchase</option>
                            </select>
                            <span asp-validation-for="SoftwareMailProcessingWaiver.subscriptionOrPurchase" class="text-danger"></span>
                        </div>
                    </div>
                    <div class='col-sm-6 col-xs-12'>
                        <div class="form-group required" id='purchaseAmountDiv'>
                            <label asp-for="SoftwareMailProcessingWaiver.purchaseAmount" class="control-label fontWeightNormal">Purchase Amount
                                <span class="glyphicon glyphicon-info-sign" data-toggle="tooltip" title="Purchase Amount"></span>
                            </label>
                            <input type="number" class="form-control" id="purchaseAmount" aria-describedby="purchaseAmount" placeholder="Purchase Amount">
                            <span asp-validation-for="SoftwareMailProcessingWaiver.purchaseAmount" class="text-danger"></span>
                        </div>
                    </div>
                </div> <!-- end of row -->


                <div class="row">
                    <div class="col-md-6 col-xs-12">
                        <div class='form-group required' id='monthlySubscriptionAmountDiv'>
                            <label asp-for='SoftwareMailProcessingWaiver.monthlySubscriptionAmount' class='control-label fontWeightNormal'>Monthly Subscription Amount</label>
                            <input type='number' class='form-control' id='monthlySubscriptionAmount' aria-describedby='monthlySubscriptionAmount' placeholder='Monthly Subscription Amount'>
                            <span asp-validation-for="SoftwareMailProcessingWaiver.monthlySubscriptionAmount" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 col-xs-12">
                        <div class='form-group required' id='numberOfMonthsDiv'>
                            <label asp-for='SoftwareMailProcessingWaiver.numberOfMonths' class='control-label fontWeightNormal'>Number of Months</label>
                            <input type='number' class='form-control' id='numberOfMonths' aria-describedby='numberOfMonths' placeholder='Number of Months'>
                            <span asp-validation-for="SoftwareMailProcessingWaiver.numberOfMonths" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class='row'>
                    <div class='col-sm-6 col-xs-12'>
                        <div class='form-group required' id='annualMaintenanceCostDiv'>
                            <label asp-for='SoftwareMailProcessingWaiver.annualMaintenanceCost' class='control-label fontWeightNormal'>Annual Maintenance Renewal Cost</label>
                            <input type='number' class='form-control' id='annualMaintenanceCost' aria-describedby='annualMaintenanceCost' placeholder='Annual Maintenance Renewal Cost'>
                        </div>
                    </div>
                    <div class='col-sm-6 col-xs-12'>
                    </div>
                </div> <!-- end of row -->

                <div class='row'>
                    <div class='col-sm-6 col-xs-12'>
                        <div class='form-group required'>
                            <label asp-for='SoftwareMailProcessingWaiver.operatorClassification' class='control-label fontWeightNormal'>Operator Classification</label>
                            <input type='text' class='form-control' id='operatorClassification' aria-describedby='operatorClassification' placeholder='Operator Classification'>
                            <span asp-validation-for="SoftwareMailProcessingWaiver.operatorClassification" class="text-danger"></span>
                        </div>
                    </div>
                    <div class='col-sm-6 col-xs-12'>
                        <div class='form-group required'>
                            <label asp-for='SoftwareMailProcessingWaiver.grade' class='control-label fontWeightNormal'>Grade</label>
                            <input type='text' class='form-control' id='grade' aria-describedby='grade' placeholder='Grade'>
                            <span asp-validation-for="SoftwareMailProcessingWaiver.grade" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <!-- end of row -->

                <div class='row'>
                    <div class='col-sm-6 col-xs-12'>
                        <div class='form-group required'>
                            <label asp-for='SoftwareMailProcessingWaiver.numberOfFTE' class='control-label fontWeightNormal'>Estimated Number of FTE</label>
                            <input type='number' class='form-control' id='numberOfFTE' aria-describedby='numberOfFTE' placeholder='Estimated Number of FTE'>
                            <span asp-validation-for="SoftwareMailProcessingWaiver.numberOfFTE" class="text-danger"></span>
                        </div>
                    </div>
                    <div class='col-sm-6 col-xs-12'>
                        <div class='form-group required'>
                            <label asp-for='SoftwareMailProcessingWaiver.hoursPerFTEPerWeek' class='control-label fontWeightNormal'>Hours Per FTE Per Week</label>
                            <input type='number' class='form-control' id='hoursPerFTEPerWeek' aria-describedby='hoursPerFTEPerWeek' placeholder='Hours Per FTE Per Week'>
                            <span asp-validation-for="SoftwareMailProcessingWaiver.hoursPerFTEPerWeek" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <!-- end of row -->

                <div class='row'>
                    <div class='col-sm-6 col-xs-12'>
                        <div class='form-group required'>
                            <label asp-for='SoftwareMailProcessingWaiver.totalWeeklySalary' class='control-label fontWeightNormal'>Total Weekly Salary</label>
                            <input type='number' class='form-control' id='totalWeeklySalary' aria-describedby='totalWeeklySalary' placeholder='Total Weekly Salary'>
                            <span asp-validation-for="SoftwareMailProcessingWaiver.totalWeeklySalary" class="text-danger"></span>
                        </div>
                    </div>
                    <div class='col-sm-6 col-xs-12'>
                    </div>
                </div>
                <!-- end of row -->

            </div>
        </div>


        <div class="panel panel-primary marginTop20px">
            <div class="panel-heading">
                <h3 class="panel-title text-center">Overhead Costs</h3>
            </div>
            <div class="panel-body">
                <div class='row'>
                    <div class='col-sm-6 col-xs-12'>
                        <div class='form-group required'>
                            <label asp-for='SoftwareMailProcessingWaiver.monthlySupervisionAmount' class='control-label fontWeightNormal'>Monthly Supervision Amount</label>
                            <input type='number' class='form-control' id='monthlySupervisionAmount' aria-describedby='monthlySupervisionAmount' placeholder='Monthly Supervision Amount'>
                            <span asp-validation-for="SoftwareMailProcessingWaiver.monthlySupervisionAmount" class="text-danger"></span>
                        </div>
                    </div>
                    <div class='col-sm-6 col-xs-12'>
                        <div class='form-group required'>
                            <label asp-for='SoftwareMailProcessingWaiver.monthlyManagementAmount' class='control-label fontWeightNormal'>Monthly Management Amount</label>
                            <input type='text' class='form-control' id='monthlyManagementAmount' aria-describedby='monthlyManagementAmount' placeholder='Monthly Management Amount'>
                            <span asp-validation-for="SoftwareMailProcessingWaiver.monthlyManagementAmount" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <!-- end of row -->

            </div>
        </div>
        <!-- end of panel -->

        <div class="form-group required">
            <label asp-for="SoftwareMailProcessingWaiver.justificationDescription" class="control-label fontWeightNormal">Justification for the request:</label>
            <textarea class="form-control" id="justificationDescription" rows='2'></textarea>
            <span asp-validation-for="SoftwareMailProcessingWaiver.justificationDescription" class="text-danger"></span>
        </div>


        <div class='form-group required'>
            <label asp-for='SoftwareMailProcessingWaiver.alternativesConsidered' class='control-label fontWeightNormal'>Please describe the alternatives you examined before making this request</label>
            <textarea class='form-control' id='alternativesConsidered' aria-describedby='alternativesConsidered' placeholder='Please describe the alternatives you examined before making this request'
                rows='2'></textarea>
            <span asp-validation-for="SoftwareMailProcessingWaiver.alternativesConsidered" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SoftwareMailProcessingWaiver.AdditionalComments" class="control-label fontWeightNormal">Any additional comments:</label>
            <textarea class="form-control" id="AdditionalComments" rows='2'></textarea>
            <span asp-validation-for="SoftwareMailProcessingWaiver.AdditionalComments" class="text-danger"></span>
        </div>

    </div>
</div>


<div class="row add-gutter marginTop20px pull-right">
    <partial name='_Logout' />
    <a class="btn btn-default" onclick="print();">Print&nbsp;
        <span class="glyphicon glyphicon-print" aria-hidden="true"></span>
    </a>
    <button class="btn btn-default btn-space-2x" type="reset">Clear Form&nbsp;
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
        </button>
    <button type="submit" class="btn btn-primary" id='createwaiver' value='Submit'>
            Create Waiver&nbsp;
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    </button>
</div>
</form>



<partial name='_Logout' />
<div style="clear: both"></div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
                showIfSelected('#subscriptionOrPurchase', ['#monthlySubscriptionAmountDiv','#numberOfMonthsDiv'], {valueList: ['1']});
                showIfSelected('#subscriptionOrPurchase', ['#purchaseAmountDiv','#annualMaintenanceCostDiv'], {valueList: ['2']});
        });

        $("#subscriptionOrPurchase").on("change", function () {
            showIfSelected('#subscriptionOrPurchase', ['#monthlySubscriptionAmountDiv','#numberOfMonthsDiv'], {valueList: ['1']});
            showIfSelected('#subscriptionOrPurchase', ['#purchaseAmountDiv','#annualMaintenanceCostDiv'], {valueList: ['2']});
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">

        $(document).ready(function () {
            showIfSelected('#typeOfDesign', ['#otherDescriptionId'], {valueList: ['0']});
        });

        $("#typeOfDesign").on("change", function () {
            showIfSelected('#typeOfDesign', ['#otherDescriptionId'], {valueList: ['0']});
        });
    </script>
}